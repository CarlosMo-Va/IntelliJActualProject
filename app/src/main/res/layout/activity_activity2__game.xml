<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activity2_Game">

    <android.support.design.widget.AppBarLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:popupTheme="@style/AppTheme.PopupOverlay"/>

    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/content_activity2__game"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:layout_alignParentStart="true" android:layout_alignParentTop="true"/>

    <Button
            android:text="Play Connect4"
            android:layout_width="189dp"
            android:layout_height="106dp"
            android:id="@+id/button" android:layout_centerHorizontal="true" android:layout_alignParentBottom="true"
            android:layout_marginBottom="141dp" android:textSize="30sp"
            android:accessibilityHeading="false"/>

</RelativeLayout>